{% extends 'base.html.twig' %}

{% block title %}Ürün Sayfası!{% endblock %}

{% block body %}


	{% if is_granted('ROLE_ADMIN') %}
		{% include 'admin/inc/adminnav.html.twig'  %}
        {% include 'inc/navbar.html.twig'  %}
                    
	{% else %}
		{% include 'inc/navbar.html.twig'  %}
	{% endif %}


<table class = " table">
    <thead>
        <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        
    <tbody>
        {% for item in items %}
        <tr>
            <td>{{item.id}}</td>
            <td>{{item.name}}</td>
            <td>{{item.price}}</td>
            <td>{{item.description}}</td>}
            {% for category in item.category %}
                  <td>{{ category.name }}</td>
            {% endfor %}
        <td>
          <a href="{{path('product_remove',{id: item.id})}}" class="delete" onclick="return confirm('Emin misin=?' )">Sil </a>
        </td>
        
        </tr>
      {% endfor %}
{% endblock %}
